---
export const prerender = false;

import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import { getEventById } from "@/lib/events";
import { generateEventSchema } from "@/lib/schemas";
import { LiveEventDetail } from "@/components/LiveEventDetail";

const { id } = Astro.params;

if (!id) {
  return Astro.redirect("/404");
}

const event = await getEventById(id);

Astro.response.headers.set(
  "Cache-Control",
  "public, s-maxage=900, stale-while-revalidate=3600",
);

if (!event) {
  return Astro.redirect("/404");
}

const description = event.description?.slice(0, 160) || `Join us for ${event.title} at ${event.location}`;
---

<Layout
  title={`${event.title} | SSA at UCSD`}
  description={description}
  image={event.image_url || "/hero.webp"}
>
  <script type="application/ld+json" set:html={JSON.stringify(generateEventSchema(event))} />

  <div class="min-h-screen bg-background">
    <div class="grid lg:grid-cols-2 min-h-screen">
      <!-- Left: Image - sticky, viewport-contained -->
      <div class="relative lg:sticky lg:top-0 lg:h-screen bg-muted/30">
        {event.image_url ? (
          <div class="h-full flex items-center justify-center p-6 lg:p-10">
            <Image
              src={event.image_url}
              alt={event.title}
              width={800}
              height={1000}
              class="max-h-[50vh] lg:max-h-[85vh] w-auto max-w-full object-contain rounded-lg shadow-xl"
            />
          </div>
        ) : (
          <div class="h-64 lg:h-full flex items-center justify-center text-muted-foreground">
            No Image
          </div>
        )}
      </div>

      <!-- Right: Content -->
      <article class="flex flex-col px-6 py-10 lg:px-12 lg:py-16">
        <Breadcrumb
          items={[
            { name: "Events", href: "/events" },
            { name: event.title },
          ]}
          className="mb-8"
        />
        <LiveEventDetail id={id} initialEvent={event} client:load />
      </article>
    </div>
  </div>
</Layout>
